<Window x:Class="ACCEA_POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACCEA_POS"
        mc:Ignorable="d"   
        Title="MainWindow" Height="800" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#000" BorderThickness="1" CornerRadius="3" Grid.Column="1" Margin="5,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0">
                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" Text="Menu" />
                </StackPanel>
                <!-- -->
                <Border Grid.Row="1" BorderBrush="#000" BorderThickness="0,1,0,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <!--<ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />-->
                        </Grid.ColumnDefinitions>
                        <!-- -->
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <!--<RowDefinition Height="12*"/>
                            <RowDefinition Height="13*" />
                            <RowDefinition Height="13*" />
                            <RowDefinition Height="13*" />
                            <RowDefinition Height="13*" />
                            <RowDefinition Height="13*" />-->
                        </Grid.RowDefinitions>
                        <!-- -->
                        <Button Grid.Row="0" Grid.Column="0" Background="#fff" Content="Sales" Margin="10"></Button>
                        <Button Grid.Row="0" Grid.Column="1" Background="#fff" Content="Settings" Margin="10"></Button>
                        <!--<Button Grid.Column="2" Grid.Row="0" Background="#fff" Content="Product C" Margin="118,0,118,117" Grid.RowSpan="3"></Button>
                        <Button Grid.Column="3" Grid.Row="0" Background="#fff" Content="Product D" Margin="0,0,0,117" Grid.RowSpan="3"></Button>
                        <Button Grid.Column="4" Grid.Row="0" Background="#fff" Content="Product E" Margin="118,0,0,117" Grid.RowSpan="3"></Button>-->
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
